---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header class="flex flex-row py-1 px-3 w-[95%] dark:bg-dark-header bg-light-header rounded-full justify-between items-center mt-2 gap-4 border-b-2 border-r-2 border-b-[#001604] border-r-[#001604]">
	<nav class="flex flex-row justify-center items-center gap-4">
		<i class="ti ti-writing text-2xl flex dark:text-dark-header-text text-light-header-text"></i>
		<HeaderLink href="/" class="dark:text-dark-header-text text-light-header-text text-base font-medium">Inicio</HeaderLink>
		<HeaderLink href="/blog" class="dark:text-dark-header-text text-light-header-text text-base font-medium">Textos</HeaderLink>
		<HeaderLink href="/about" class="dark:text-dark-header-text text-light-header-text text-base font-medium">Sobre m√≠</HeaderLink>
	</nav>
	<label for="darkmode">
		<i class="ti ti-circle-half-2 text-2xl flex dark:text-dark-header-text text-light-header-text cursor-pointer"></i>
		<input type="checkbox" id="darkmode" class="absolute opacity-0">
	</label>
	<script src="../../scripts.js"></script>
</header>